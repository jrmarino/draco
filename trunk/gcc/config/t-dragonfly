# Like NetBSD, DragonFly BSD has problems with GCC's stddef.h
# until stddef.h properly defines everything (like wchar_t) we'll just
# exclude it from the list.

USER_H = $(srcdir)/ginclude/float.h \
	 $(srcdir)/ginclude/iso646.h \
	 $(srcdir)/ginclude/stdarg.h \
	 $(srcdir)/ginclude/stdbool.h \
	 $(srcdir)/ginclude/varargs.h \
	 $(srcdir)/ginclude/stdfix.h \
	 $(EXTRA_HEADERS)

# Compile crtbeginS.o and crtendS.o with pic. (Same as FreeBSD)
CRTSTUFF_T_CFLAGS_S = $(CRTSTUFF_T_CFLAGS) -fPIC

# Compile libgcc.a with pic. (Same as FreeBSD)
TARGET_LIBGCC2_CFLAGS += -fPIC

# Use unwind-dw2-fde-glibc (Same as FreeBSD)
LIB2ADDEH = $(srcdir)/unwind-dw2.c $(srcdir)/unwind-dw2-fde-glibc.c \
  $(srcdir)/unwind-sjlj.c $(srcdir)/gthr-gnat.c $(srcdir)/unwind-c.c
LIB2ADDEHDEP = unwind.inc unwind-dw2-fde.h unwind-dw2-fde.c
